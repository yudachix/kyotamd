{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2015"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "newLine": "lf",
    "outDir": "dist",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS"
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}